name: Formatting & compliance

on:
  push:
    branches:
    - main
  pull_request:
    branches:
    - main

jobs:
  pre-commit-conda:
    runs-on: ubuntu-latest
    defaults:
      run:
        shell: bash -l {0}
    steps:
    - uses: actions/checkout@v2
    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: [[project_version]]
    - uses: conda-incubator/setup-miniconda@v2
      with:
        miniconda-version: "latest"
        channels: atmcirc, conda-forge
        channel-priority: strict
        show-channel-urls: true
    - name: Create conda env
      run: |
        conda create -n precommit python==[[project_version]]
        conda activate precommit
        conda install mamba
    - name: Install dependencies
      run: |
        conda activate precommit
        mamba install --yes --file requirements.in
        conda deactivate
    - name: Install dev dependencies
      run: |
        conda activate precommit
        mamba install --yes --file dev-requirements.in
        conda deactivate
    - name: Install pre-commit hooks
      run: |
        conda activate precommit
        pre-commit install-hooks
        conda deactivate
    - name: Run pre-commit hooks
      run: |
        conda activate precommit
        pre-commit run --all-files
        conda deactivate
